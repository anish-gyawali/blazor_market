@page "/login"
@inject NavigationManager Navigation

<div class="form">

   <div class="form-header">
       <p>Login</p>
   </div>
   <div class="form-content">
       <div class="row">
           <div class="col-md-4">
               <div class="form-group">
                   <input type="text" class="form-control" placeholder="Email *" value="" />
               </div>
               <div class="form-group">
                   <input type="text" class="form-control" placeholder="Password *" value="" />
               </div>
           </div>
       </div>
       <div class="formButton">
            <button type="button" class="btnSubmit" onclick="@RouteToRegister">Register</button>
            <button type="button" class="btnSubmit"> Login</button>
       </div>
   </div>
 </div>
@code {

    private void RouteToRegister()
    {
        Navigation.NavigateTo("register");
    }
}
